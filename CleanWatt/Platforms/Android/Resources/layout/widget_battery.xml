<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background"
    android:gravity="center">

    <!-- Header with status icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/battery_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---%"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/charging_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/powersave_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Éco"
                android:textSize="10sp"
                android:textColor="#FF9800"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/battery_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#4CAF50"
        android:progressBackgroundTint="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/label_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="État"
                android:textSize="10sp"
                android:textColor="#AAAAAA" />

            <TextView
                android:id="@+id/battery_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/label_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temp"
                android:textSize="10sp"
                android:textColor="#AAAAAA" />

            <TextView
                android:id="@+id/battery_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/label_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Santé"
                android:textSize="10sp"
                android:textColor="#AAAAAA" />

            <TextView
                android:id="@+id/battery_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

    <!-- Bluetooth devices container -->
    <LinearLayout
        android:id="@+id/bt_devices_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        android:visibility="gone">

        <!-- Device slot 1 -->
        <LinearLayout
            android:id="@+id/bt_device_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/bt_device_1_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/bt_device_1_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textColor="#CCCCCC"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginStart="4dp" />

            <ProgressBar
                android:id="@+id/bt_device_1_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:max="100"
                android:progress="0"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/bt_device_1_level"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:gravity="end"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Device slot 2 -->
        <LinearLayout
            android:id="@+id/bt_device_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/bt_device_2_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/bt_device_2_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textColor="#CCCCCC"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginStart="4dp" />

            <ProgressBar
                android:id="@+id/bt_device_2_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:max="100"
                android:progress="0"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/bt_device_2_level"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:gravity="end"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Device slot 3 -->
        <LinearLayout
            android:id="@+id/bt_device_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/bt_device_3_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/bt_device_3_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textColor="#CCCCCC"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginStart="4dp" />

            <ProgressBar
                android:id="@+id/bt_device_3_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:max="100"
                android:progress="0"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/bt_device_3_level"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:gravity="end"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Overflow indicator -->
        <TextView
            android:id="@+id/bt_overflow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#AAAAAA"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
