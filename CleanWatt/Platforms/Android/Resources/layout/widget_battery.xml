<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background"
    android:gravity="center_vertical">

    <!-- Phone row -->
    <LinearLayout
        android:id="@+id/phone_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/phone_icon"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:text="ðŸ“±"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/phone_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="6dp" />

        <ProgressBar
            android:id="@+id/phone_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="50dp"
            android:layout_height="6dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#4CAF50"
            android:progressBackgroundTint="#333333"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/phone_level"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_marginStart="6dp" />

        <TextView
            android:id="@+id/phone_status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginStart="2dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Phone details line -->
    <TextView
        android:id="@+id/phone_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#AAAAAA"
        android:layout_marginStart="28dp"
        android:layout_marginTop="1dp"
        android:singleLine="true" />

    <!-- BT device 1 -->
    <LinearLayout
        android:id="@+id/bt_device_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/bt_device_1_icon"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/bt_device_1_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#CCCCCC"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="6dp" />

        <ProgressBar
            android:id="@+id/bt_device_1_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="50dp"
            android:layout_height="6dp"
            android:max="100"
            android:progress="0"
            android:progressBackgroundTint="#333333"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/bt_device_1_level"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:gravity="end"
            android:layout_marginStart="6dp" />

    </LinearLayout>

    <!-- BT device 2 -->
    <LinearLayout
        android:id="@+id/bt_device_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/bt_device_2_icon"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/bt_device_2_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#CCCCCC"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="6dp" />

        <ProgressBar
            android:id="@+id/bt_device_2_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="50dp"
            android:layout_height="6dp"
            android:max="100"
            android:progress="0"
            android:progressBackgroundTint="#333333"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/bt_device_2_level"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:gravity="end"
            android:layout_marginStart="6dp" />

    </LinearLayout>

    <!-- BT device 3 -->
    <LinearLayout
        android:id="@+id/bt_device_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/bt_device_3_icon"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/bt_device_3_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#CCCCCC"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="6dp" />

        <ProgressBar
            android:id="@+id/bt_device_3_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="50dp"
            android:layout_height="6dp"
            android:max="100"
            android:progress="0"
            android:progressBackgroundTint="#333333"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/bt_device_3_level"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:gravity="end"
            android:layout_marginStart="6dp" />

    </LinearLayout>

    <!-- Overflow indicator -->
    <TextView
        android:id="@+id/bt_overflow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#AAAAAA"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

</LinearLayout>
