<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BatteryWidget.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#512BD4</Color>
            <Color x:Key="Secondary">#DFD8F7</Color>
            <Color x:Key="Background">#1E1E1E</Color>
            <Color x:Key="TextPrimary">#FFFFFF</Color>
            <Color x:Key="TextSecondary">#AAAAAA</Color>
            <Color x:Key="BatteryGood">#4CAF50</Color>
            <Color x:Key="BatteryMedium">#FF9800</Color>
            <Color x:Key="BatteryLow">#F44336</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
